<?xml version="1.0" encoding="UTF-8"?>
<kafka-clients>

    <!-- 订单推送云搜索消息监听 -->
    <consumer>
        <id>merchant.data.calc.receiver.shopping.order.es</id>
        <topic>KAFKA_SHOPPINGORDER_SYNC_TO_ES</topic>
        <handler.class>com.ule.merchant.demo.kafka.impl.ShoppingOrderEsImpl</handler.class>
        <group.id>merchant_data_center</group.id>
        <zookeeper.connect>172.25.201.69:2181,172.25.201.70:2181,172.25.201.71:2181</zookeeper.connect>
        <auto.commit.enable>true</auto.commit.enable>
        <auto.commit.interval.ms>1000</auto.commit.interval.ms>
        <is.batch>true</is.batch>
        <batch.size>100</batch.size>
        <auto.offset.reset>smallest</auto.offset.reset>
        <num.consumer.fetchers>1</num.consumer.fetchers>
        <!-- <catch.exception.enable>true</catch.exception.enable> -->
        <ext.props>
            <socket.timeout.ms>6000</socket.timeout.ms>
            <socket.receive.buffer.bytes>8192</socket.receive.buffer.bytes>
            <consumer.timeout.ms>6000</consumer.timeout.ms>
        </ext.props>
    </consumer>

</kafka-clients>
